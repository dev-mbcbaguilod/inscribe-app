<!-- todo.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="css/todo.css">
</head>
<body>
    <%- include('./partials/headers_todo.ejs') %>
    <div class="container">
        <!-- Add the unique class to encapsulate the styles -->
        <div class="todo-app-container todo-app">
            <h2>To Do List</h2>
            <!-- Add a hidden input field to store the user ID -->
            <input type="hidden" id="userId" value="<%= user ? user.id : '' %>">
            <div class="row">
                <input type="text" id="input-box" placeholder="Add your text">
                <button onclick="addTask()">Add</button>
            </div>
            <ul id="list-container">
                <!-- <li class="checked">Task 1</li>
                <li>Task 2</li>
                <li>Task 3</li> -->
            </ul>
        </div>
    </div>
    <script src="js/script.js"></script>
</body>
</html>
